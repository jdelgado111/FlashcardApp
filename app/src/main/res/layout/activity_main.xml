<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="What city is the capital of Virginia?"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/card_background" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="Richmond"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:background="@drawable/card_background2" />

    <TextView
        android:id="@+id/flashcard_option1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/flashcard_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@color/options"
        android:gravity="center"
        android:text="Houston"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/flashcard_option2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/flashcard_option1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/options"
        android:gravity="center"
        android:text="Richmond"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/flashcard_option3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/flashcard_option2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/options"
        android:gravity="center"
        android:text="Pittsburgh"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/toggle_options_visibility"
        android:src="@drawable/hide_icon"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/addCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/add_icon" />

    <ImageView
        android:id="@+id/editCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/edit_icon" />

    <ImageView
        android:id="@+id/nextCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/next_icon" />

    <ImageView
        android:id="@+id/deleteCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/delete_icon" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20dp" />

</RelativeLayout>