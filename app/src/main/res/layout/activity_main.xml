<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="What city is the capital of Virginia?"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/card_background" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Richmond"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:background="@drawable/card_background2" />

    <TextView
        android:id="@+id/flashcard_option1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/flashcard_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:background="@color/options"
        android:text="Houston"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/flashcard_option2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/flashcard_option1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:background="@color/options"
        android:text="Richmond"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/flashcard_option3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/flashcard_option2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:background="@color/options"
        android:text="Pittsburgh"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/toggle_options_visibility"
        android:src="@drawable/hide_icon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>